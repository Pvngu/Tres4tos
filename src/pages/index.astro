---
import Layout from "../layouts/Layout.astro";
import TimelineContent from "../components/TimelineContent.astro";
import HeroIntro from "../components/HeroIntro.astro";
import H2 from "../components/H2.astro";
import Gallery from "../components/Gallery.astro";
import SectionContent from "../components/SectionContent.astro";
import ContactForm from "../components/ContactForm.astro";
---

<Layout title="Andrea Hernandez | Portfolio">
	<main>
		<section id="home">
			<div
				class="flex h-screen max-md:flex-col-reverse max-md:w-full"
			>
				<HeroIntro />
				<div class="md:w-1/2 max-md:mt-[80px]">
					<img
						class="object-cover size-full"
						src="/images/hero-image.jpg"
						alt="andrea's picture"
					/>
				</div>
			</div>
		</section>
		<div class="bg-cream-white rounded-t-3xl" id="bg">
			<SectionContent class="py-16" id="about">
				<H2>About Me</H2>
				<TimelineContent />
			</SectionContent>
			<SectionContent id="gallery">
				<H2>Gallery</H2>
				<Gallery />
			</SectionContent>
		</div>
		<SectionContent class="bg-cream-white py-10" id="contact">
			<H2>Contact Me</H2>
			<ContactForm />
		</SectionContent>
	</main>
</Layout>
